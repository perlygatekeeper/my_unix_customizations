# given an array reference, return index of smallest element
sub array_min {
  my($arr)=shift;
  my $j=0;
  foreach my $i ( 1 .. $#{$arr)) {
    if ($arr[$i]<$arr[$j]) {
      $j=$i;
    };
#   $smallest_element=$arr[$j];
  return $j
}# given an array reference, return index of smallest element

sub array_max {
  my($arr)=shift;
  my $j=0;
  foreach $i ( 1 .. $#{$arr)) {
    if ($arr[$i]>$arr[$j]) {
      $j=$i;
    };
#   $smallest_element=$arr[$j];
  return $j
}
