sub response {
  my($prompt, $regexp, $exit_regexp) = @_;
  print ($prompt) ? $prompt : "yes|no ";
  my $response=<STDIN>;
  $regexp ||= "^y";
  $exit_exp ||= "^e(xit)?|^q(uit)?";
  if ($exit_regexp and $response=~/$exit_regexp/i) {
    print "Quitting $name in response to user input '$response'\n";
    exit;
  }
  return ($response =~ /$regexp/i);
}
