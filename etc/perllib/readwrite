  $infile  = "<$name.in";
  $outfile = ">$name.out";
  open(INFILE,"$infile")   || die("$name: Cannot read from '$infile': $!\n");
  open(OUTFILE,"$outfile") || die("$name: Cannot write to '$outfile': $!\n");
  while (<INFILE>) {
    print OUTFILE "stuff\n";
  }
  close(INFILE);
  close(OUTFILE);


