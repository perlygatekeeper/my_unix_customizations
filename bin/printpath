#!/usr/bin/env perl
#-----------------------------------------------------------------------------
#   ***   Define Default Strings, Values & Flags   ***
use strict;
use warnings;
my $name      = $0; $name =~ s'.*/'';
my $false     = 0;
my $true      = 1;
my $usage     = "usage: $name [-m (for MANPATH) | (-lp|-llp) LD_LIBRARY_PATH | -p5 PERL5LIB ]\n";
my $newline   = "\n";
my $tab       = "\t";
my $backspace = "\010";
my $formfeed  = "\014";
my ( $man, $path, $p5l, $llp, $ll );

#   ***   Parse Command Line Argument(s)   ***
while ( @ARGV >= 1 ) {
   if    ( $ARGV[0] eq '-m'    ) { $man = $true; shift; }
   elsif ( $ARGV[0] eq '-p5'   ) { $p5l = $true; shift; }
   elsif ( $ARGV[0] =~ /-ll?p/ ) { $llp = $true; shift; }
   elsif ( $ARGV[0] =~ /-ll/   ) { $ll  = $true; shift; }
   else { shift; print $usage; }
}  # end while

if    ($man) { $path = $ENV{'MANPATH'}  || ''; }
elsif ($p5l) { $path = $ENV{'PERL5LIB'} || ''; }
elsif ($llp) { $path = $ENV{'LD_LIBRARY_PATH'}  || ''; }
else         { $path = $ENV{'PATH'}; };

# print ">$path<\n\n";
#
my $orig_path = $path;

if ( $path =~ m,cygdrive, ) {
    $path =~ s':' 'g;
    $path =~ s, /(cygdrive|home|usr|bin|lib|drives),\n/$1,g;
} else {
    $path =~ s'[  \t\n]+''ge;
    $path =~ s':?$'$newline'e;
    $path =~ s':'$newline'ge;
    $path =~ s'\n\n+'$newline'mge;
}


if ( $ll ) {
  $orig_path =~ s':' 'g;
  print qx(echo $orig_path | xargs ls -ld);
} else {
  print $path . "\n\n";
}

#   ***   EXIT GRACEFULLY   ***
exit 0;

__END__

echo use:    find . -type f -exec grep '^ln' {} \; | sh
echo printpath is the 'real' file
ln -fs printpath pp
