#!/usr/bin/env perl
# A perl script to recreate rotrot

my $name = $0; $name =~ s'.*/''; # remove path--like basename
my $usage = "usage:\n$name [-opt1] [-opt2] [-opt3]";

use strict;
use warnings;


while (<>) {
#                     CD  GH JK  N  QR  UV X Z                            
#                    B     H J LM P  R             e gh jk mn   rs    x   
# $_ =~ tr/A-Z a-z@/ABCDEFGHIJKLMNOPQRSTUVWXYZ abcdefghijklmnopqrstuvwxyz@/;
  $_ =~ tr/A-Z a-z@/f:smYzT:g:t::a:nh:uOAbFoiM vPBc:p::w::d::kWx::eIrl:ySf/;
  $_ =~ s/^.//;
  print;
}

exit 0;

__END__



