#!/usr/bin/perl
#
# A perl script to print first odd then even lines.
#
# ie. lines thus:       	# will be rearranged to:	
# 1                     	# 1                     	
# 2                     	# 3                     	
# 3                     	# 2                     	
# 4                     	# 4                     	
#
# for the reverse functionality see shuffle.

@lines=<>;
for ($i=0; $i<=$#lines; $i+=2) { print $lines[$i]; }
for ($i=1; $i<=$#lines; $i+=2) { print $lines[$i]; }
