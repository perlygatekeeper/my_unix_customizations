#!/usr/bin/perl
#
# A perl script to change character sequence 
# 342 200 231 which looks like this 'â€™'
#
$name = $0; $name =~ s'.*/''; # remove path--like basename
$usage = "usage:\n$name [-opt1] [-opt2] [-opt3]";

while (<>) {
  s/\342\200\231/'/g;
  s/\302\267/*/g;
  print;
}

exit 0;

__END__
print "\342\200\231";
