#!/usr/bin/perl
#
# A perl script to change modification date in scripts
#
$name = $0;
$name =~ s'.*/''; # remove path--like basename
$usage = "usage:\n$name [-opt1] [-opt2] [-opt3]";
$last_mod_date='Thu, Jan 25, 2001';

#require("datetime.pl");
$day=&day();

while (<>) {
  s/^(.*\$.*mod_date.*)=\s*(['"])[^\2]+\2\s*;\s*/\1=\2$day\2;/;
  print;
}

exit 0;

__END__
