#!/usr/bin/env perl
# A perl script to swap first to words every line.

my $name = $0; $name =~ s'.*/''; # remove path--like basename
my $usage = "usage:\n$name [-opt1] [-opt2] [-opt3]";

use strict;
use warnings;

while (<>) {
# s/^(\W*)(\w+)(\W+)(\w+)(\W.*)$/.$1.$4.$3.$2.$5./;
  s/^(\s*)(\S+)(\s+)(\S+)(\s*)$/$1$4$3$2$5/;
  print;
}

exit 0;

__END__
