function here {
        export PATH="${PATH}:."
}
function addpath {
        export PATH="${PATH}:$1"
}
function postpath {
        export PATH="${PATH}:$1"
}
function prepath {
        export PATH="$1:${PATH}"
}
function pwdpath {
        export PATH="`pwd`:${PATH}"
}
function mcd {
        mkdir $1
        cd $1
}
function sv {
        vi +"$1:" $2*
}
function orig {
        cp $1 $1.orig
}
alias      procs='ps -eo "pid,ppid,tty,user,cputime,cmd"'
alias       hogs='ps -eo "pid,ppid,tty,user,cputime,cmd" | egrep "[        ]0[^0]:|[       ]00:[^0]" | cut -c31- | sort'
